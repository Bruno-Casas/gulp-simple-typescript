{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs",                     
      "lib": ["es2017"],                             
      "allowJs": true,                       
      "outDir": "./dist",                       
      "rootDir": "./src",
      "declaration": true,                    
      "removeComments": true,                                    
      "esModuleInterop": true,                  
      "resolveJsonModule": true,      
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "./src/**/*"
    ]
  }
  